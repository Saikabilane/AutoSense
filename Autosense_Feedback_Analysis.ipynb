# Google Authentication
from google.colab import auth
auth.authenticate_user()

import gspread
from gspread_dataframe import get_as_dataframe
import pandas as pd
from google.auth import default

# Get Google credentials
creds, _ = default()
gc = gspread.authorize(creds)

# Open your Google Sheet
sheet_name = "Autosense_Service_Feedback"   # CHANGE ONLY IF NEEDED
sh = gc.open(sheet_name)
worksheet = sh.sheet1

# Convert Google Sheet → DataFrame
df = get_as_dataframe(worksheet, evaluate_formulas=True)
df = df.dropna(how="all")  # remove empty rows

# Clean Timestamp & Create Month column
df['Timestamp'] = pd.to_datetime(df['Timestamp'], errors='coerce')
df['Month'] = df['Timestamp'].dt.to_period('M')

# -----------------------------------------
# ANALYSIS TABLES (MANUFACTURING REPORT)
# -----------------------------------------

# Monthly Fault Count
monthly_faults = df.groupby('Month')['FaultType'].count().reset_index()
monthly_faults.rename(columns={'FaultType':'FaultCount'}, inplace=True)

# Top failing parts
top_parts = df.groupby('Component')['FaultType'].count().reset_index()
top_parts.rename(columns={'FaultType':'FaultCount'}, inplace=True)
top_parts = top_parts.sort_values(by='FaultCount', ascending=False)

# Severity distribution
severity_stats = df.groupby('Severity')['FaultType'].count().reset_index()
severity_stats.rename(columns={'FaultType':'Count'}, inplace=True)

# Customer satisfaction (average rating per vehicle)
cust_satisfaction = df.groupby('VehicleID')['Rating'].mean().reset_index()
cust_satisfaction.rename(columns={'Rating':'AvgRating'}, inplace=True)
cust_satisfaction = cust_satisfaction.sort_values(by='AvgRating')

# Service Center performance (fault count)
service_center_perf = df.groupby('ServiceCenterID')['FaultType'].count().reset_index()
service_center_perf.rename(columns={'FaultType':'FaultCount'}, inplace=True)

# Manufacturing Alerts – High Severity Only
manufacturing_alerts = df[df['Severity']=="High"][['VehicleID','Component','FaultType','Timestamp','ServiceCenterID']]

# Summary Table (Most failed part)
summary = pd.DataFrame({
    'Metric' : [
        'Most Failed Part',
        'Total Faults Logged',
        'Highest Severity Count',
        'Worst Customer Rating Vehicle',
        'Best Customer Rating Vehicle'
    ],
    'Value' : [
        top_parts.iloc[0]['Component'],
        df.shape[0],
        severity_stats[severity_stats['Severity']=="High"]['Count'].iloc[0] if "High" in severity_stats['Severity'].values else 0,
        cust_satisfaction.iloc[0]['VehicleID'],
        cust_satisfaction.iloc[-1]['VehicleID']
    ]
})

# -----------------------------------------
# SAVE ALL REPORT TABLES INTO 1 EXCEL FILE
# -----------------------------------------

output_file = "/content/Service_Feedback_Report.xlsx"

with pd.ExcelWriter(output_file, engine='xlsxwriter') as writer:
    summary.to_excel(writer, sheet_name='Summary', index=False)
    monthly_faults.to_excel(writer, sheet_name='Monthly_Faults', index=False)
    top_parts.to_excel(writer, sheet_name='Top_Failing_Parts', index=False)
    severity_stats.to_excel(writer, sheet_name='Severity_Stats', index=False)
    cust_satisfaction.to_excel(writer, sheet_name='Customer_Satisfaction', index=False)
    service_center_perf.to_excel(writer, sheet_name='ServiceCenter_Performance', index=False)
    manufacturing_alerts.to_excel(writer, sheet_name='Manufacturing_Alerts', index=False)

print("✅ Final report generated:", output_file)
